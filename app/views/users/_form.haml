- unless form.object.new_record?
  = form.input :avatar
= form.input :name
= form.input :email
= form.input :location
= form.input :login
= form.input :password, :as => :password, :label => (form.object.new_record? ? "Password" : "Change password")
= form.input :password_confirmation, :as => :password
- form.buttons do
  = form.commit_button