%h1= t(".header")

#sidebar
  #albums
    %h2
      .commands
        = link_to t(".new_album"), new_album_path
      = t(".my_albums")

    - if @albums.empty?
      .no-items= t(".no_albums")
    - else
      = render :partial => "albums/album", :collection => @albums, :locals => { :style => :tiny }

  #news
    %h2= t(".news")
    = render :partial => "shared/event", :collection => @events

#posts
  %h2= t(".journal")
  = render :partial => "users/post_form"
  = render :partial => "users/post", :collection => @posts
  = will_paginate @posts