- @page_title = t(".header")

.row#dashboard
  .span10
    #photos
      %h3= t(".new_photos")
      = render @photos

  .span6
    #posts
      %h3= t(".journal")
      = render :partial => "users/post_form"
      = render :partial => "users/post", :object => @post

    #albums
      %h3= t(".my_albums")
      = link_to t("albums.index.new"), new_album_path

      - if @albums.empty?
        .no-items= t(".no_albums")
      - else
        = render :partial => "albums/album", :collection => @albums
