!!!
%html
  %head
    %meta{ "http-equiv" => "content-type", "content" => "text/html;charset=UTF-8" }
    %title== #{@title && (@title + " -")} #{t(:family_hut)}
    = stylesheet_link_tag 'reset', 'global', 'formtastic', 'formtastic_changes', :cache => "main"
    = javascript_include_tag 'jquery-1.4.1.min', 'jquery/jquery.jeditable.js', 'jquery/jquery.tools.min.js', 'rails', 'ajaxupload', 'application'
    = csrf_meta_tag
  %body
    #page.wrapper
      = render :partial => "layouts/header"
      #content
        = yield
      = render :partial => "layouts/footer"
