- @page_title = 'Login'

= form_for @user_session, :url => user_session_path do |f|
  %fieldset
    .clearfix
      = f.label :login
      .input= f.text_field :login
    .clearfix
      = f.label :password
      .input= f.password_field :password
    .clearfix
      .input
        = f.check_box :remember_me
        %span Remember me
  .actions
    = f.submit "Login", :class => "primary btn"
