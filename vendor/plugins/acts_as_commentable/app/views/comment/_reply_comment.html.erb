<% javascript_tag do %>
    function <%= reply_function %>(o, comment_id){
        $(o).closest('.comments').find('div.reply_link').show();
        $(o).closest('.reply_link').hide();
        $(o).closest('.reply').prepend($('#<%= div_id %>'));
        $("#<%= div_id %> > .new_comment > .parent_comment > input[name='parent_id']").val(comment_id);
        $('#<%= div_id %> > .new_comment > .cancel_reply').show();
    }
<% end %>